\ProvidesPackage{beamer-latex-shortcuts}[2019/10/30 v1.0.0 Extra shortcuts for beamer]
\RequirePackage{etoolbox,csquotes}
\newcommand\lstshowcmd[2][]{\protected@edef\@tmp@@b{\noexpand\lstinline[#1]!#2!}\@tmp@@b}
\def\previewColor#1{\emph{#1} \tikz[baseline=-.6ex]{\draw[fill=#1] circle (4.5pt);}}
\let\T\texttt
\long\def\info#1{\textcolor{gray}{\scriptsize(#1)}}
\long\def\infoblock#1{\par{\scriptsize\textcolor{gray}{(#1)}\par}}

\let\say\enquote
\newcommand\parallelcontent[3][t]{%
\begin{columns}[#1,onlytextwidth]
\column{.5\linewidth}#2\relax
\column{.5\linewidth}#3\relax
\end{columns}}
