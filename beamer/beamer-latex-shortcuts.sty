\ProvidesPackage{beamer-latex-shortcuts}[2019/10/30 v1.0.0 Extra shortcuts for beamer]

\RequirePackage{etoolbox,csquotes}

\newcommand\lstshowcmd[2][]{\edef\@tmp@@b{\noexpand\lstinline[#1]!#2!}\@tmp@@b}

\def\previewColor#1{\emph{#1} \tikz[baseline=-0.6ex]{\draw[fill=#1] circle (4.5pt);}}
% colorpreview

\let\T\texttt
\def\info#1{\begingroup\scriptsize\textcolor{gray}{(#1)}\endgroup}
\let\say\enquote

\long\def\parallelcontent#1#2{%
\begin{columns}%
  \column{0.48\textwidth} #1%
  \column{0.48\textwidth} #2%
\end{columns}%
}

