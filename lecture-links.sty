\newcommand*\SetAllLinkStyle[1]{%
    \def\leclink@autoref@linkstyle##1{#1}%
    \def\leclink@nameref@linkstyle##1{#1}%
    \def\leclink@hyperref@linkstyle##1{#1}%
    \def\leclink@hyperlink@linkstyle##1{#1}%
    \def\leclink@url@linkstyle##1{#1}%
    \def\leclink@href@linkstyle##1{#1}%
}

\newcommand*\SetAutorefLinkStyle[1]{\def\leclink@autoref@linkstyle##1{#1}}
\newcommand*\SetNamerefLinkStyle[1]{\def\leclink@nameref@linkstyle##1{#1}}
\newcommand*\SetHyperrefLinkStyle[1]{\def\leclink@hyperref@linkstyle##1{#1}}
\newcommand*\SetHyperlinkLinkStyle[1]{\def\leclink@hyperlink@linkstyle##1{#1}}
\newcommand*\SetUrlLinkStyle[1]{\def\leclink@url@linkstyle##1{#1}}
\newcommand*\SetHrefLinkStyle[1]{\def\leclink@href@linkstyle##1{#1}}

\newif\ifleclink@enabled@
\newcommand*{\DisableLinkStyle}{\leclink@enabled@false}
\newcommand*{\EnableLinkStyle}{\leclink@enabled@true}

\SetAllLinkStyle{\texttt{#1}}
\EnableLinkStyle

\AtBeginDocument{% robust not needed as let persists
% autoref
    \let\leclink@autoref\autoref%
    \renewcommand*{\autoref}{%
        \@ifstar\leclink@star@autoref\leclink@nostar@autoref%
    }%
    \def\leclink@star@autoref#1{\leclink@autoref*{#1}}
    \def\leclink@nostar@autoref#1{\ifleclink@enabled@\expandafter\leclink@autoref@linkstyle\fi{\leclink@autoref{#1}}}%
% nameref
    \let\leclink@nameref\nameref%
    \renewcommand*{\nameref}{%
        \@ifstar\leclink@star@nameref\leclink@nostar@autoref%
    }%
    \def\leclink@star@nameref#1{\leclink@nameref*{#1}}%
    \def\leclink@nostar@nameref#1{\ifleclink@enabled@\expandafter\leclink@nameref@linkstyle\fi{\leclink@nameref{#1}}}%
    \let\leclink@hyperref\hyperref%
% hyperref
    % what if no label?
    \renewcommand*{\hyperref}{%
        \@ifnextchar[{\Hy@babelnormalise\leclink@label@hyperref}\leclink@full@hyperref%
    }%
    \def\leclink@label@hyperref[#1]#2{%
        \ifleclink@enabled@\expandafter\leclink@hyperref@linkstyle\fi{\leclink@hyperref[#1]{#2}}%
    }%
    \def\leclink@full@hyperref#1#2#3{%
        \ifleclink@enabled@\expandafter\leclink@hyperref@linkstyle\fi{\leclink@hyperref{#1}{#2}{#3}}%
    }%
% url
    \let\leclink@url\url%
    \renewcommand*{\url}{\hyper@normalise\leclink@read@url}%
    \def\leclink@read@url#1{\ifleclink@enabled@\expandafter\leclink@url@linkstyle\fi{\leclink@url{#1}}}%
    % hyperlink
    \let\leclink@hyperlink\hyperlink%
    \renewcommand*{\hyperlink}[2]{\ifleclink@enabled@\expandafter\leclink@hyperlink@linkstyle\fi{\leclink@hyperlink{#1}{#2}}}%
% href
    % We do not modify href as it depends on the href-keys we redef the split-call
    \leclink@overwrite@hrefsplit%
}

\begingroup
