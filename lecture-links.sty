\def\href@split$$1#$$2#$$3\\$$4{%
  \ifleclink@enabled@\expandafter\leclink@href@linkstyle\fi{\hyper@@link{$$1}{$$2}{$$4}}%
  \endgroup
}%
}
\endgroup

