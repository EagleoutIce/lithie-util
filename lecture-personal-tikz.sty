\ProvidesPackage{lecture-personal-tikz}[2020/11/03 v1.0 Personal tikz]

\RequirePackage{forest,pgfplots}

\def\fillfont{\def\mdseries@sf{medium}\sffamily}
\colorlet{lec@descgray}{lightgray!32!white}
\AtEndPreamble{%
  \ifcsname tikzumlset\endcsname%
    \tikzumlset{fill usecase=white, fill template=white, fill package=white,fill system=white, fill state=white,fill object=white, fill class=white,
    fill port=white, fill component=white,fill note=lec@descgray, font=\small\ttfamily}%
  \fi%
  \tikzset{%
    every node/.append style={font=\sffamily},%
    lblock/.style={block,#1,writ,font=\fillfont}, %
    lblock/.default={tikzA},
    block/.style={rectangle,draw, align=center, minimum height=1.9em,rounded corners=1.65pt},%
    desc/.style={scale=0.85,font=\itshape\sffamily,fill=lec@descgray,inner sep=1.15ex,align=left}%
  }
}
% mindmap and trees for overview
\usetikzlibrary{graphs,arrows.meta,calc}
\pgfplotsset{compat=1.16,every axis/.append style={legend cell align={left}}}

