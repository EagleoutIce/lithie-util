\def\href@split$$1#$$2#$$3\\$$4{%
    \def\lecmrk{$$1}\leclink@pnextlinkstyle{\leclink@href@linkstyle}\hyper@@link{$$1}{$$2}{$$4}%
  \endgroup
}}
