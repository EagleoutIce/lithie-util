% A styling for the bibliography setting i like,
% maybe more styles will be added in the future
\ProvidesPackage{lecture-bibliography}[2020/09/22 v1.0 Bibliography Styling]
\RequirePackage{kvoptions,csquotes}
\SetupKeyvalOptions{family=LBI,prefix=LBI@}
\DeclareStringOption[alphabetic]{style}[alphabetic]
\DeclareBoolOption{biber}\DeclareBoolOption{backref}
\DeclareDefaultOption{\PassOptionsToPackage{\CurrentOption}{biblatex}}
\ProcessKeyvalOptions*
\ifLBI@backref\PassOptionsToPackage{backref=true}{biblatex}\fi
\ifLBI@biber\PassOptionsToPackage{backend=biber}{biblatex}
\else\PassOptionsToPackage{backend=bibtex8}{biblatex}\fi
\RequirePackage[style=\LBI@style,sorting=nyvt]{biblatex}
\defbibheading{bibliography}[\bibname]{\section{#1}}
\ifLBI@backref
\DefineBibliographyStrings{english}{backrefpage={on page}, backrefpages={on pages}}
\DefineBibliographyStrings{german}{backrefpage={Seite:}, backrefpages={Seiten:}}
\fi
\endinput